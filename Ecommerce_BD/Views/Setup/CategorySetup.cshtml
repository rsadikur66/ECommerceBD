
@{
    ViewBag.Title = "CategorySetup";
}

<script src="~/Apps/JScontrollers/Setup/categorySetupController.js"></script>
<script src="~/Apps/JSservices/Setup/categorySetupService.js"></script>
<script src="cute-alert.js"></script>
<style>
    .margin_top {
        margin-top: 1%;
    }

    .red {
        background-color: #A4F5A3;
        cursor:pointer;
    }

    /*#CatTable {
        background-color: #b581cc;
        font-weight: bold;*/
        /*color:#ffffff;*/
    /*}*/

    #CatTable th {
        /*font-size: 20px;*/
        text-align: center;
        color: #e8c199;
        background-color: #5a6a81;
    }
</style>

<h2>CategorySetup</h2>

<div class="container" ng-app="EcommerceBD" ng-controller="categorySetupController">
    <div class="row">
        <div class="col-md-2 hidden">
            <label class="float-right">Category Id:</label>
        </div>
        <div class="col-md-2 hidden">
            <input id="txtCategoryId" ng-model="obj.cat.CATEGORY_ID" class="form-control float-left" style="width:250px;" />
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            <label class="float-right">English Name :</label>
        </div>
        <div class="col-md-2">
            <input id="txtEnglishName" ng-model="obj.cat.T_LANG2_NAME" class="form-control float-left" style="width:250px;" required />
        </div>
    </div>
    <div class="row margin_top">
        <div class="col-md-2">
            <label class="float-right">Local Name :</label>
        </div>
        <div class="col-md-2 ">
            <input id="txtLocalName" ng-model="obj.cat.T_LANG1_NAME" class="form-control float-left" style="width:250px;" />
        </div>
    </div>
    <div class="row margin_top">
        <div class="col-md-2"></div>
        <div class="col-md-1">
            <input type="button" id="btnSave" class="btn btn-primary" ng-click="Save()" value="{{buttonText}}" title="Save" />
        </div>
        <div class="col-md-1">
            <input type="button" id="btnSave" class="btn btn-danger" ng-click="Delete()" value="Delete" title="Delete" />
        </div>
        <div class="col-md-1">
            <input type="button" id="btnReport" class="btn btn-primary" ng-click="Print()" value="Report" title="Report" />
        </div>
    </div>
    <br />
    <br />

    <div >
        <table id="CatTable" class="table table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Category Id</th>
                    <th>Category Name Bangla</th>
                    <th>Category Name English</th>
                </tr>
            </thead>
            <tr dir-paginate="v in obj.categories |filter : Search |itemsPerPage:5" ng-class="{red: hover}" ng-mouseover="hover = true" ng-mouseleave="hover = false" pagination-id="bed" ng-click="rowSelect(v)">
                <td>{{v.CATEGORY_ID}}</td>
                <td>{{v.T_LANG1_NAME}}</td>
                <td>{{v.T_LANG2_NAME}}</td>
            </tr>
        </table>
        <dir-pagination-controls pagination-id="bed" max-size="5"
                                 direction-links="true"
                                 boundary-links="true">
        </dir-pagination-controls>

    </div>
</div>
