<!DOCTYPE html>
<html ng-app="EcommerceBD">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Chaldal</title>
    <link rel="icon" href="./Images/title-icon.png" type="image/x-icon">


    @*css links starts*@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">
    @*<link href="~/Content/bootstrap.min.css" rel="stylesheet" />*@
    <link rel="stylesheet" href="~/Content/layout.css" />
    <link href="~/Content/select.css" rel="stylesheet" />
    <link href="~/Content/select2.css" rel="stylesheet" />
    <link href="~/Content/selectize.default.css" rel="stylesheet" />
    @*<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/angular-ui-grid/4.6.3/ui-grid.min.css" type="text/css">*@
    <link href="~/Content/CuteAlertStyle.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    @*css links ends*@


    @*js links starts*@
    @*<script src="~/Scripts/jquery-3.3.1.min.js"></script>*@
    @*<script src="~/Scripts/bootstrap.min.js"></script>*@
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/angular-sanitize.min.js"></script>
    <script src="~/Scripts/dirPagination.js"></script>
    <script src="~/Scripts/select.js"></script>
    @*fileupload*@
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/danialfarid-angular-file-upload/12.2.13/ng-file-upload.min.js"></script>
    <script defer src="https://use.fontawesome.com/releases/v5.0.13/js/solid.js"></script>
    <script defer src="https://use.fontawesome.com/releases/v5.0.13/js/fontawesome.js"></script>
    <script src="~/Scripts/angular-route.min.js"></script>

    <script src="~/Apps/app.js"></script>
    <script src="~/Apps/JScontrollers/menuController.js"></script>
    <script src="~/Apps/JSservices/menuService.js"></script>
    <script src="~/Apps/JScontrollers/products_ctr.js"></script>
    <script src="~/Apps/JSservices/homeService.js"></script>
    @*js links ends*@
    <style>
        .rightAlign {
            float: right;
        }

        .scrollable-menu {
            height: auto;
            max-height: 200px;
            overflow-x: hidden;
        }

        .webtitle {
            color: #00fa9a;
            font-weight: bold;
            font-size: xx-large;
            cursor: pointer;
        }

        #sidebar ul li {
            list-style: none;
            padding: 5px;
            font-size: 14px;
        }
    </style>

    @*<script src="~/Scripts/angular-sanitize.min.js"></script>
        <script src="~/Scripts/angular-route.min.js"></script>*@
    @*@Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")*@
</head>
<body ng-controller="menuController">
    <div class="wrapper">
        <!-- Sidebar  -->
        <nav id="sidebar">
            <div class="sidebar-header">
                <a href="/">
                    <img src="~/Images/chaldal-com.jpg" alt="chaldal.com" width="150px" height="50px" />
                </a>

            </div>
            <ul>
                <li ng-repeat="item in obj.categoriesList">
                    <img style="width: 20px;height: 20px;display: block;float: left;margin-right: 5px;" src="./Images/{{item.Icon}}" alt="">
                    <div>
                        <a href="#!HomePage/product/{{item.SourceUrl}}/{{item.CategoryId}}">{{item.CategoryName}}</a>
                        @*<a href="/Home/About">{{item.CategoryName}}</a>*@
                    </div>
                </li>
            </ul>
        </nav>
        <!-- Page Content  -->
        <div id="content">
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="container-fluid">
                    <button type="button" id="sidebarCollapse" class="btn btn-info">
                        <i class="fas fa-align-left"></i> <span>Menu</span>
                    </button>
                    <button class="btn btn-dark d-inline-block d-lg-none ml-auto" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <i class="fas fa-align-justify"></i>
                    </button>
                    <button class="btn btn-success" type="button" data-toggle="modal" data-target="#LoginModal">Log In</button>
                </div>
            </nav>

            <div class="ng-view">
                @RenderBody()
            </div>
        </div>
        <div class="modal fade" id="LoginModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel">
            <div class="modal-dialog modal-s" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title text-primary" id="exampleModalLabel">Login</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div>
                            <label for="">Login Id</label>
                            <input class="form-control" type="text" ng-model="loginInput" placeholder="Login Id">
                        </div>
                        <div>
                            <label for="">Password</label>
                            <input class="form-control" type="password" ng-model="passInput" placeholder="Password">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-success" ng-click=LogIn(loginInput,passInput)>Login</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#sidebarCollapse').on('click', function () {
                $('#sidebar').toggleClass('active');
                $('#content').toggleClass('active');
            });
        });
    </script>

</body>
</html>
